<div class="ui container">
    <div class="ui grid">
            <div class="row">
                <h2 class="ui header" >store example</h2>
            </div>
            <div class="row" >
                <button class="ui button" {{action "storeGet" model}} >get</button>
                <button class="ui button" {{action "storePost" model}} >post</button>
                <button class="ui button" {{action "storePut" model}} >put</button>
                <button class="ui button" {{action "storeDelete" model}} >delete</button>
                <button class="ui button" {{action "storeAjaxSuccess" model}} >AjaxSuccess</button>
                <button class="ui button" {{action "storeAjaxFail" model}} >AjaxFail</button>
                <button class="ui button" {{action "errorRequest"}} >errorRequest</button>
            </div>
            <div class="row">
                {{#ui-message}}
                    {{message}}
                {{/ui-message}}
            </div>
    </div>
</div>
